<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context="com.ks.seal.launcher.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/seal_bg_style_fang_xing_yang_ke_yin_zhang"
            android:padding="5dp"
            android:text="玉传\n玺国"
            android:textAlignment="center"
            android:textColor="#ff0000"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/seal_bg_style_fang_xing_yin_ke_yin_zhang"
            android:padding="5dp"
            android:text="玉传\n玺国"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/v3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/seal_bg_style_fang_xing_yang_ke_yuan_jiao"
            android:padding="5dp"
            android:text="玉传\n玺国"
            android:textAlignment="center"
            android:textColor="#ff0000"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/v4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/seal_bg_style_fang_xing_yin_ke_yuan_jiao"
            android:padding="5dp"
            android:text="玉传\n玺国"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/v5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/seal_bg_style_yuan_xing_yang_ke_yin_zhang"
            android:padding="15dp"
            android:text="玉传\n玺国"
            android:textAlignment="center"
            android:textColor="#ff0000"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/v6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/seal_bg_style_yuan_xing_yin_ke_yin_zhang"
            android:padding="15dp"
            android:text="玉传\n玺国"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/v7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/seal_bg_style_fang_xing_yang_ke_yin_zhang"
            android:padding="10dp"
            android:text="中书令"
            android:textAlignment="center"
            android:textColor="#ff0000"
            android:textSize="29dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/seal_bg_style_yuan_xing_yang_ke_yin_zhang"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="12dp"
            android:text="玉传玺国"
            android:textAlignment="center"
            android:textColor="#ff0000"
            android:textSize="30dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/seal_bg_style_yuan_xing_yin_ke_yin_zhang"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="12dp"
            android:text="玉传玺国"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/vbtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="华文新魏" />

        <Button
            android:id="@+id/vbtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宋体" />

        <Button
            android:id="@+id/vbtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黑体" />

        <Button
            android:id="@+id/vbtn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隶书" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/vbtn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="篆书" />

        <Button
            android:id="@+id/vbtn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="方篆" />

        <Button
            android:id="@+id/vbtn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金文" />
    </LinearLayout>
</LinearLayout>
